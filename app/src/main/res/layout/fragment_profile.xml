<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">


    <FrameLayout
        android:layout_width="match_parent"
        android:background="#39076C3A"
        android:layout_height="210dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_user"
            android:layout_height="100dp"/>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/personName"
            android:text="David Janson"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/personMail"
                android:text="somebody@gmail.com"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/roboto"
                        android:text="Mobile Number"
                        android:id="@+id/emailtext"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/personPhone"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/editbackgreen"
                        android:paddingStart="20dp"
                        android:paddingTop="10dp"
                        android:text="1234567890"
                        android:textColor="#076C3A"
                        android:textColorHint="#7726242B" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/roboto"
                        android:text="Your class"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/personClass"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:paddingTop="10dp"
                        android:text="11th"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/editbackgreen"
                        android:paddingStart="20dp"
                        android:textColor="#076C3A"
                        android:textColorHint="#7726242B" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/roboto"
                        android:text="Your Subject"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/personSub"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:paddingTop="10dp"
                        android:text="Maths"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/editbackgreen"
                        android:paddingStart="20dp"
                        android:textColor="#076C3A"
                        android:textColorHint="#7726242B" />

                </LinearLayout>


            </FrameLayout>

            <ImageButton
                android:id="@+id/logoutBtn"
                android:layout_marginTop="20dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/background_btn_choose_account"
                android:fontFamily="@font/roboto_medium"
                android:src="@drawable/logout"
                android:textColor="#FBFBFB"
                android:textSize="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:text="Logout"
                android:textColor="#000"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_height="wrap_content"/>


        </LinearLayout>


    </ScrollView>







</LinearLayout>